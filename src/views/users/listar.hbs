<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmacion!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Ã‰sta seguro de querer borrar este usuario?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="btnBorrarCentro">Eliminar</button>
      </div>
    </div>
  </div>
</div>




<div class="row">
  <div class="col-sm-12">
    <table class="table table-bordered mt-5" >
  <thead class="thead-dark">
    <tr align="center" valign="middle">
      <th scope="col" >#</th>
      <th scope="col" >Nombre</th>
      <th scope="col" >acceso</th>
      <th scope="col" >Accion</>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr align="center">
        <td>{{increment @index}}</td>
        <td valign="middle" scope="row" class=" align-self-center" id={{_id}}>{{name}}</td>
         <td><p class=" align-self-center">{{acceso}}</p></td>
           <td>
             <form action="/users/{{_id}}" method="GET">
             {{!-- <input type="hidden" name="_method" value="PUT"> --}}
                <button type="submit" class="btn btn-success btn-ingresar">Editar <i class="fas fa-edit"></i></button>
             </form>
             <form action="/users/{{_id}}?_method=DELETE" method="POST" id="formCentroDelete">
             <input type="hidden" name="_method" value="DELETE">
                {{!-- <button type="submit" class="btn btn-danger">Eliminar</button> --}}
                 <button type="button" class="btn btn-danger btn-ingresar" data-toggle="modal" data-target="#exampleModal">Eliminar <i class="fas fa-trash"></i></button>
             </form>
             
           </td>
      </tr>
    {{/each}}

  </tbody>
</table>

  </div>
</div>

<script>
  const form = document.getElementById('formCentroDelete');
  const btnBorrarCentro = document.getElementById('btnBorrarCentro');
  btnBorrarCentro.addEventListener('click', () => {
    form.submit();
  })
</script>