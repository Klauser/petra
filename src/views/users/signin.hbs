

<div class="row fade1">
        <div class="col text-center" id="imgtitle">
            <img src="/images/prmfavicon.png"  id="documentLogo" alt="" style="width: 15%;">
        </div>
    </div>


<div class="col-md-5 mx-auto fade1">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">INGRESAR</h3>
        </div>
        <div class="card-body">
            
            <form action="/users/signin" method="POST">
                <div class="form-group">
                    
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{name}}" required>
                </div>
                <div class="form-group">
                    
                    <input type="password" name="password" class="form-control" placeholder="password" value="{{password}}" required>
                </div>
                                
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        SignIn<i class="fas fa-angle-double-right btn-arrow-icon"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>