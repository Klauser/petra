{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="row fade1">
        <div class="col text-center" id="imgtitle">
            <img src="/images/users-icon.png"  id="documentLogo" alt="" style="width: 10%;">
        </div>
    </div>


<div class="col-md-5 mx-auto fade1">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">REGISTRO DE USUARIOS</h3>
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{name}}" required>
                </div>
                <div class="form-group">
                    
                    <input type="password" name="password" class="form-control" placeholder="password" value="{{password}}" required>
                </div>
                <div class="form-group">
                   
                    <input type="password" name="confirm_password" class="form-control" placeholder="password" value="{{confirm_password}}" required>
                </div>
                <div class="form-group">
                    
                    <select name="acceso" class="form-control" required>
                        <option value="digitador">Digitador</option>
                        <option value="verificador">Verificador</option>
                        <option value="observador">Observador</option>
                        <option value="administrador">Administrador</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        SignUp<i class="fas fa-angle-double-right btn-arrow-icon"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>